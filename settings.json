// Visual Studio Code Settings
// Place your settings in this file to overwrite default and user settings.
{
  "editor.fontFamily": "source code pro, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 17,
  "editor.formatOnPaste": true,
  "editor.fontWeight": "300",
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": true,
  "editor.renderWhitespace": "none",
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "files.exclude": {
    "**/dist-client": true,
    "**/dist-server": true,
    "**/dist-test": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "flow.runOnEdit": false,
  "flow.useNPMPackagedFlow": true,
  "gitlens.blame.heatmap.enabled": true,
  "gitlens.blame.highlight.locations": ["line"],
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.codeLens.authors.command":"gitlens.diffWithPrevious",
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.currentLine.format": "${authorAgoOrDate}, ${message|40?}",
  "gitlens.defaultGravatarsStyle": "retro",
  "gitlens.statusBar.alignment": "left",
  "gitlens.statusBar.reduceFlicker": true,
  "markdown.extension.preview.autoShowPreviewToSide": true,
  "relativePath.ignore": [
    "**/.git/**",
    "**/coverage/**",
    "**/dist-client/**",
    "**/dist-server/**",
    "**/dist-test/**",
    "**/flow-output/**",
    "**/flow-typed/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/tmp/**"
  ],
  "search.exclude": {
    "**/.git": true,
    "**/coverage": true,
    "**/dist-client": true,
    "**/dist-server": true,
    "**/dist-test": true,
    "**/flow-output": true,
    "**/flow-typed": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true
  },
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "window.zoomLevel": -2,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showIcons": false,
  "workbench.colorTheme": "One Dark Pro"
}
