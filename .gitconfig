[user]
  name = Jon Sadka
  email = xx@xxx.com

[color]
  ui = auto
[color "branch"]
  current = yellow
  local = green
  remote = cyan
[color "diff"]
  meta = magenta
  frag = magenta
  old = red
  new = green
  whitespace = red reverse
[color "status"]
  added = green
  changed = yellow
  untracked = red

[alias]
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
